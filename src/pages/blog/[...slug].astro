---
import PageLayout from '@layouts/PageLayout.astro';
import { SITE_TITLE, SITE_SUBTITLE, SITE_DESCRIPTION } from '@src/consts';

import { getBlogPosts } from '@accessors/astro/blogAccessor';

import BlogPost from '@components/BlogPost.astro';
import { avgReadingTimeMins } from '@helpers/string';

export async function getStaticPaths() {
	const posts = await getBlogPosts();
	return posts.map((post) => ({
		params: { slug: post.slug },
		props: post,
	}));
}

const post = Astro.props;
const { Content } = await post.render();
const readingTimeMins = avgReadingTimeMins(post.body);
---

<PageLayout
	title={SITE_TITLE}
	subTitle={SITE_SUBTITLE}
	description={SITE_DESCRIPTION}
	isArticle={true}
>
	<BlogPost
		readingTimeMins={readingTimeMins}
		previousPostSlug={post.previousPostSlug}
		nextPostSlug={post.nextPostSlug}
		{...post.data}
	>
		<Content />
	</BlogPost>
</PageLayout>